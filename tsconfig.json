{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"outDir": "out",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": [
	  	"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
  }